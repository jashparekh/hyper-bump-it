{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    "config:base",
    "helpers:pinGitHubActionDigests"
  ],

  "enabledManagers": [
    "docker-compose",
    "github-actions",
    "pip_requirements",
    "setup-cfg"
  ],

  "schedule": [
    "before 4am"
  ],

  "python": {
    "fileMatch": ["requirements-\\.*.txt"]
  }
}
